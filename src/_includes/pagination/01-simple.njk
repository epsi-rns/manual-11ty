{% set totalPages = pagination.links.length %}
{% set current    = pagination.pageNumber + 1 %}

{% if totalPages > 1 %}
  <ul class="pagination">  
    <!-- First Page. -->    
    {% if current  > 1 %}
      <li class="waves-effect">
        <a href="{{ pagination.firstPageLink }}" rel="first"
           class="{{ color }}-text text-darken-2">
          <i class="material-icons">first_page</i>
      </a></li>
    {% else %}
      <li class="disabled">
        <a title="This is the first page">
          <i class="material-icons">first_page</i>
      </a></li>
    {% endif %}

    <!-- Previous Page. -->
    {% if pagination.previousPageLink %}
      <li class="waves-effect">
        <a href="{{ pagination.previousPageLink }}" rel="prev"
           class="{{ color }}-text text-darken-2">
          <i class="material-icons">chevron_left</i>
      </a></li>
    {% else %}
      <li class="disabled">
        <a title="This is the first page">
        <i class="material-icons">chevron_left</i>
      </a></li>
    {% endif %}

    <!-- Indicator Number. -->
      <li class="disabled">
        <a class="pagination-link">
          Page: {{ current }} of {{ totalPages }}
      </a></li>

    <!-- Next Page. -->
    {% if pagination.nextPageLink %}
      <li class="waves-effect">
        <a href="{{ pagination.nextPageLink }}" rel="next"
           class="{{ color }}-text text-darken-2">
          <i class="material-icons">chevron_right</i>
      </a></li>
    {% else %}
      <li class="disabled">
        <a title="This is the last page">
          <i class="material-icons">chevron_right</i>
      </a></li>
    {% endif %}

    <!-- Last Page. -->
    {% if current  != totalPages %}
      <li class="waves-effect">
        <a href="{{ pagination.lastPageLink }}" rel="last"
           class="{{ color }}-text text-darken-2">
          <i class="material-icons">last_page</i>
      </a></li>
    {% else %}
      <li class="disabled">
        <a title="This is the last page">
          <i class="material-icons">last_page</i>
      </a></li>
    {% endif %}
  </ul>
{% endif %}

